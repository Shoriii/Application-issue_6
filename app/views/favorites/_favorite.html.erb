<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book, redirect_id: 0), method: :delete, data: { remote: true } do %>
   <span class="glyphicon glyphicon-heart"><%= book.favorites.count%></span>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book, redirect_id: 0), method: :post, data: { remote: true } do %>
     <span class="glyphicon glyphicon-heart-empty"><%= book.favorites.count %></span>
    <% end %>
<% end %>
